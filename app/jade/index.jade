            script.
                $('.twitter-timeline').attr('style', 'position: static;visibility: visible;display: inline-block;width: 400px;display: block;height: 400px;padding: 0px;border: none;max-width: 100%;min-width: 180px;margin-top: 0px;margin-bottom: 0px;min-height: 200px;box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.28), 0 4px 15px 0 rgba(0, 0, 0, 0.75) !important;');
