                  var $timelineHeader = $('.twitter-timeline').contents().find('.timeline-Header');
                  if ($timelineHeader.length) {
                    $('.twitter-timeline').contents().find('.timeline-Header').attr("style", "background: #791563 !important;color: #fff !important");
                    $('.twitter-timeline').contents().find('.timeline-Header-title.u-inlineBlock').attr('style', 'color: #fff !important');
                    $('.twitter-timeline').contents().find('.timeline-Footer.u-cf').attr('style', 'background: #791563 !important;color: #fff !important');
                    return clearInterval(timelineInterval);
                  }
                }, 50);
            
